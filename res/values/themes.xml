<resources>
    <!--Light Theme Customization-->
    <style name="content_layout_light">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_medium</item>
        <item name="android:layout_marginTop">@dimen/size_medium</item>
        <item name="android:layout_marginEnd">@dimen/size_medium</item>
        <item name="android:layout_marginBottom">@dimen/size_large</item>
        <item name="android:background">@color/cmwhite</item>
    </style>
    <style name="template_control_light">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/size_small</item>
        <item name="android:paddingTop">@dimen/size_large</item>
        <item name="android:paddingEnd">@dimen/size_small</item>
        <item name="android:paddingBottom">@dimen/size_large</item>
    </style>
    <style name="template_paneldesc_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">@dimen/size_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="template_panelname_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/size_small</item>
        <item name="android:paddingEnd">@dimen/size_small</item>
        <item name="android:paddingBottom">@dimen/size_small</item>
        <item name="android:paddingStart">@dimen/size_small</item>
        <item name="android:layout_marginStart">@dimen/size_large</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/cmgray</item>
        <item name="android:background">@drawable/light_panel_background</item>
        <item name="android:layout_marginTop">@dimen/size_medium</item>
    </style>
    <style name="template_seekbar_light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/size_medium</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingBottom">@dimen/size_medium</item>
    </style>
    <style name="template_seekbar_text_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/size_medium</item>
        <item name="android:paddingEnd">@dimen/size_medium</item>
        <item name="android:background">@drawable/light_panel_background</item>
    </style>
    <style name="template_accept_decline_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">@dimen/size_small</item>
        <item name="android:layout_marginEnd">@dimen/size_small</item>
        <item name="android:layout_marginBottom">@dimen/size_medium</item>
        <item name="android:background">@color/cmwhite</item>
    </style>
    <style name="template_spinner_light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:layout_marginTop">@dimen/size_large</item>
        <item name="android:layout_marginStart">@dimen/size_small</item>
        <item name="android:layout_marginEnd">@dimen/size_small</item>
        <item name="android:layout_marginBottom">@dimen/size_large</item>
        <item name="android:prompt">@string/title_activity_main</item>
    </style>
    <style name="template_spinner_item_light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/cmwhite</item>
    </style>
    <style name="template_switch_light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/title_activity_main</item>
        <item name="android:layout_marginStart">@dimen/size_large</item>
        <item name="android:layout_marginEnd">@dimen/size_large</item>
        <item name="android:layout_marginBottom">@dimen/size_small</item>
        <item name="android:layout_marginTop">@dimen/size_small</item>
        <item name="android:checked">false</item>
    </style>
    <style name="template_scrollview_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">@dimen/size_medium</item>
        <item name="android:layout_marginEnd">@dimen/size_medium</item>
        <item name="android:layout_marginBottom">@dimen/size_large</item>
        <item name="android:layout_marginTop">@dimen/size_large</item>
        <item name="android:background">@color/cmwhite</item>
    </style>
    <style name="template_text_desc_light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/size_small</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">@dimen/size_medium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="template_text_name_light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cmgray</item>
    </style>
    <style name="template_viewpager_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_above">@id/AcceptDeclineLayout</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
    </style>
    <style name="template_panel_separator_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/size_medium</item>
        <item name="android:layout_marginEnd">@dimen/size_medium</item>
        <item name="android:layout_marginBottom">@dimen/size_medium</item>
        <item name="android:layout_marginTop">@dimen/size_medium</item>
        <item name="android:background">@color/cmdkgray</item>
        <item name="android:text">""</item>
    </style>

